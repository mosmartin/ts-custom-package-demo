{
  "name": "ts-custom-package-demo",
  "description": "A typescript package for NodeJS projects",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mosmartin/ts-custom-package-demo.git"
  },
  "keywords": [
    "Typescript",
    "TDD"
  ],
  "author": "Martin Macharia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mosmartin/ts-custom-package-demo/issues"
  },
  "homepage": "https://github.com/mosmartin/ts-custom-package-demo#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "jest": "^27.0.5",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "testEnvironment": "node",
    "verbose": true
  }
}